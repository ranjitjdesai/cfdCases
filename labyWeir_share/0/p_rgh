FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p_rgh;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform $pressure; //calls pressure from #include initialConditions & stores in var internalField

boundaryField
{
    inlet
    {
        type            zeroGradient;
    }

    outlet
    {
        type            zeroGradient; //free flowing pressure outlet
    }

    bed
    {
        type            fixedFluxPressure;
    }
    weir
    {
        type            fixedFluxPressure;
    }

    top
    {
        type            totalPressure;
        p0              uniform 0;
    }
    
    allBoundary
    {
        type            fixedFluxPressure;
    }

}

// ************************************************************************* //
