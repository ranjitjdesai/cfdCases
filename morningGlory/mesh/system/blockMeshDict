FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

//input bounding ranges
x0 -0.1;
x1 50.1;
y0 -0.1;
y1 50.1;
z0 -0.1;
z1 30.1;

//input cell size required
dx 	1;
dy	1;
dz	1;

//calculates lengths of sides
lx #calc "$x1 - $x0";
ly #calc "$y1 - $y0";
lz #calc "$z1 - $z0";

//calculates number of cell divisions
xCell #calc "round ($lx/$dx)";
yCell #calc "round ($ly/$dy)";
zCell #calc "round ($lz/$dz)";

vertices
(
    //Block 0
    ($x0 $y0 $z0) //0
    ($x1 $y0 $z0) //1
    ($x1 $y1 $z0) //2
    ($x0 $y1 $z0) //3
    ($x0 $y0 $z1) //4
    ($x1 $y0 $z1) //5
    ($x1 $y1 $z1) //6
    ($x0 $y1 $z1) //7

);

blocks
(
    hex (0 1 2 3 4 5 6 7)  ($xCell $yCell $zCell) simpleGrading (1 1 1)
);

edges
(
);

boundary
(
    allBoundary//Don't worry about these settings
    {
        type wall;
        faces
        (
            (3 7 6 2) //ymax
            (0 4 7 3) //xmin
            (2 6 5 1) //xmax
            (1 5 4 0) //ymin
            (0 3 2 1) //zmin
            (4 5 6 7) //zmax
        );
    }
);





// ************************************************************************* //
